<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.medisolv.BuyMedicinesActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="20dp">
        <ImageView
            android:id="@+id/my_toolbarImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/logo_3"/>
    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doctor ID :"
        android:id="@+id/doctorid_textView"
        android:layout_below="@+id/my_toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/abc_input_method_navigation_guard" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;ID from DB>"
        android:id="@+id/databasedoctorid"
        android:layout_alignTop="@+id/doctorid_textView"
        android:layout_toRightOf="@+id/doctorid_textView"
        android:layout_toEndOf="@+id/doctorid_textView"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:textSize="20dp"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient ID :"
        android:id="@+id/patientid_textview"
        android:layout_below="@+id/doctorid_textView"
        android:layout_alignLeft="@+id/doctorid_textView"
        android:layout_alignStart="@+id/doctorid_textView"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;ID from DB>"
        android:id="@+id/databasepatientid"
        android:layout_alignBottom="@+id/patientid_textview"
        android:layout_alignLeft="@+id/databasedoctorid"
        android:layout_alignStart="@+id/databasedoctorid"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View History"
        android:id="@+id/view_historybutton"
        android:textAllCaps="false"
        android:layout_below="@+id/patientid_textview"
        android:layout_alignLeft="@+id/patientid_textview"
        android:layout_alignStart="@+id/patientid_textview"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/addpatientbackbutton"
        android:layout_alignEnd="@+id/addpatientbackbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Priscribe"
        android:id="@+id/priscribebutton"
        android:textAllCaps="false"
        android:layout_below="@+id/view_historybutton"
        android:layout_alignLeft="@+id/view_historybutton"
        android:layout_alignStart="@+id/view_historybutton"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/view_historybutton"
        android:layout_alignEnd="@+id/view_historybutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a test / scan"
        android:textAllCaps="false"
        android:id="@+id/addtestscanbutton"
        android:layout_below="@+id/priscribebutton"
        android:layout_alignLeft="@+id/priscribebutton"
        android:layout_alignStart="@+id/priscribebutton"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/priscribebutton"
        android:layout_alignEnd="@+id/priscribebutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textAllCaps="false"
        android:id="@+id/addpatienthomebutton"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/addtestscanbutton"
        android:layout_alignStart="@+id/addtestscanbutton"
        android:layout_marginBottom="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textAllCaps="false"
        android:id="@+id/addpatientbackbutton"
        android:layout_alignTop="@+id/addpatienthomebutton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="34dp" />


</RelativeLayout>
