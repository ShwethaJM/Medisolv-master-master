<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.medisolv.DependentsActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/my_toolbarImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/logo_3"/>
    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dependents"
        android:id="@+id/dependents"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/my_toolbar"
        android:layout_marginLeft="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/patiendId"
        android:id="@+id/dependentsPatientId"
        android:layout_marginTop="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textSize="20dp"
        android:layout_below="@+id/dependents"
        android:layout_alignLeft="@+id/dependents"
        android:layout_alignStart="@+id/dependents" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id from DB "
        android:id="@+id/dependentsPatientIdValue"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        android:layout_alignTop="@+id/dependentsPatientId"
        android:layout_toRightOf="@+id/dependentsPatientId"
        android:layout_toEndOf="@+id/dependentsPatientId" />

    <Button
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:text="@string/home"
        android:id="@+id/dependentHomeButton"
        android:layout_marginLeft="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp"
        android:textAllCaps="false"
        android:textStyle="bold"/>

    <Button
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:text="@string/first"
        android:id="@+id/dependentFirstButton"
        android:layout_alignBottom="@+id/dependentHomeButton"
        android:layout_toRightOf="@+id/dependentHomeButton"
        android:layout_toEndOf="@+id/dependentHomeButton"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_marginLeft="5dp" />

    <Button
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:id="@+id/dependentNextButton"
        android:layout_alignTop="@+id/dependentFirstButton"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:textStyle="bold"/>

    <Button
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:text="@string/last"
        android:id="@+id/dependentLastButton"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_alignTop="@+id/dependentNextButton"
        android:layout_toRightOf="@+id/dependentNextButton"
        android:layout_toEndOf="@+id/dependentNextButton"
        android:layout_marginLeft="5dp" />

    <Button
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:id="@+id/dependentBackButton"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_alignTop="@+id/dependentLastButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp" />

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="@string/dependent1"
        android:id="@+id/dependent1"
        android:textAllCaps="false"
        android:layout_below="@+id/dependentsPatientId"
        android:layout_alignLeft="@+id/dependentsPatientId"
        android:layout_alignStart="@+id/dependentsPatientId"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view"
        android:id="@+id/dependentViewButton1"
        android:textAllCaps="false"
        android:layout_alignTop="@+id/dependent1"
        android:layout_toRightOf="@+id/dependent1"
        android:layout_toEndOf="@+id/dependent1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="del"
        android:id="@+id/dependentDelButton1"
        android:textAllCaps="false"
        android:onClick="OpenDetails"
        android:layout_above="@+id/dependentDelButton2"
        android:layout_toRightOf="@+id/dependentViewButton1"
        android:layout_toEndOf="@+id/dependentViewButton1" />

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="@string/dependent2"
        android:id="@+id/dependent2"
        android:textAllCaps="false"
        android:layout_below="@+id/dependent1"
        android:layout_alignLeft="@+id/dependent1"
        android:layout_alignStart="@+id/dependent1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view"
        android:id="@+id/dependentViewButton2"
        android:textAllCaps="false"
        android:layout_above="@+id/dependent3"
        android:layout_toRightOf="@+id/dependent2"
        android:layout_toEndOf="@+id/dependent2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="del"
        android:id="@+id/dependentDelButton2"
        android:textAllCaps="false"
        android:layout_above="@+id/dependentViewButton3"
        android:layout_toRightOf="@+id/dependentViewButton2"
        android:layout_toEndOf="@+id/dependentViewButton2" />

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="@string/dependent3"
        android:id="@+id/dependent3"
        android:textAllCaps="false"
        android:layout_below="@+id/dependent2"
        android:layout_alignLeft="@+id/dependent2"
        android:layout_alignStart="@+id/dependent2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view"
        android:id="@+id/dependentViewButton3"
        android:textAllCaps="false"
        android:layout_alignTop="@+id/dependent3"
        android:layout_toRightOf="@+id/dependent3"
        android:layout_toEndOf="@+id/dependent3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="del"
        android:id="@+id/dependentDelButton3"
        android:textAllCaps="false"
        android:layout_alignTop="@+id/dependentViewButton3"
        android:layout_alignLeft="@+id/dependentDelButton2"
        android:layout_alignStart="@+id/dependentDelButton2" />
</RelativeLayout>
