<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.medisolv.BuyMedicinesActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:id="@+id/my_toolbarImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/logo_3"/>
    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Dr."
        android:id="@+id/welcomedr"
        android:layout_below="@+id/my_toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textSize="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;ID from DB>"
        android:id="@+id/name"
        android:layout_toEndOf="@+id/welcomedr"
        android:layout_alignTop="@+id/welcomedr"
        android:layout_toRightOf="@+id/welcomedr"
        android:layout_alignBottom="@+id/welcomedr"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doctor ID : "
        android:id="@+id/doctorid"
        android:layout_below="@+id/welcomedr"
        android:layout_alignLeft="@+id/welcomedr"
        android:layout_alignStart="@+id/welcomedr"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/abc_input_method_navigation_guard" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;ID from DB>"
        android:id="@+id/patientid"
        android:textSize="20dp"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignTop="@+id/doctorid"
        android:layout_toRightOf="@+id/doctorid"
        android:layout_toEndOf="@+id/doctorid" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Consult a patient"
        android:textAllCaps="false"
        android:id="@+id/consultapatientbutton"
        android:layout_below="@+id/doctorid"
        android:layout_alignLeft="@+id/doctorid"
        android:layout_alignStart="@+id/doctorid"
        android:layout_marginTop="20dp"
 />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a Patient"
        android:textAllCaps="false"
        android:id="@+id/consultpatientaddpatientbutton"
        android:layout_below="@+id/consultapatientbutton"
        android:layout_alignLeft="@+id/consultapatientbutton"
        android:layout_alignStart="@+id/consultapatientbutton"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/consultapatientbutton"
        android:layout_alignEnd="@+id/consultapatientbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a medicine"
        android:textAllCaps="false"
        android:id="@+id/addamedicinebutton"
        android:layout_below="@+id/consultpatientaddpatientbutton"
        android:layout_alignLeft="@+id/consultpatientaddpatientbutton"
        android:layout_alignStart="@+id/consultpatientaddpatientbutton"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/consultpatientaddpatientbutton"
        android:layout_alignEnd="@+id/consultpatientaddpatientbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a scan"
        android:textAllCaps="false"
        android:id="@+id/addscanbutton"
        android:layout_below="@+id/addamedicinebutton"
        android:layout_alignLeft="@+id/addamedicinebutton"
        android:layout_alignStart="@+id/addamedicinebutton"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/addamedicinebutton"
        android:layout_alignEnd="@+id/addamedicinebutton" />

</RelativeLayout>
